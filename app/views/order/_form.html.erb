<div class="col-md-4"></div>
<div class="col-md-4">
  <%= simple_form_for ([@event, @event.orders.build]), html: { class: 'form-horizontal' }, url: {action: 'create'} do |f| %>

    <% if @event.errors.any? %>
        <div id="error_explanation" class="alert alert-danger" role="alert">
          <h4>
            Fehler verhindern eine Bestellung.
          </h4>
        </div>
    <% end %>

    <p>
      <%= f.input :name,
                  label: 'Vorname',
                  hint: 'Name des Käufers' %>
    </p>

    <p>
      <%= f.input :surname,
                  label: 'Nachname',
                  hint: 'Nachname des Käufers' %>
    </p>

    <p>
      <%= number_of_tickets = f.input :amount,
                  as: :integer,
                  input_html: {value: '1'},
                  label: 'Anzahl der Tickets',
                  hint: 'Wieviele Tickets möchten sie bestellen?'%>
      <%= f.association :event,
                        as: :hidden
      %>
    </p>
    <%

    %>
    <p>Noch <%= @available_tickets %> Tickets verfügbar.</p>
      <p>
        <% if @available_tickets > 0 %>
          <%= f.submit 'Jetzt kaufen', id: 'submit_order', class: 'btn btn-lg btn-primary', data: {disable_with: 'Bitte warten...', confirm: 'Sicher?'}%>
        <% end %>
      </p>
  <% end %>
</div>
<div class="col-md-4"></div>
